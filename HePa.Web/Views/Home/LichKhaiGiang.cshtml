@section AddToHead {
    <style>
        .simple-content ul li {
            line-height: 19px;
            padding-left: 25px;
        }

        .simple-content li:before {
            content: "▶️";
            margin-right: 7px;
            color: #e86841;
        }

        .box-header.lich-khai-giang {
            background-image: url('/dist/img/home-page/header-3.png');
        }

        .content-1 {
            margin-left: 30px;
        }

        h4 {
            margin-bottom: 6px;
        }

        .detail {
            margin-bottom: 25px;
            margin-left: 25px;
            display: block;
        }

        .contact {
            text-align: center;
            border: 1px solid #e1e1e1;
            color: #777;
            font-size: 12px;
            padding-left: 0;
            margin-bottom: 30px;
            border-radius: 5px;
        }

            .contact li {
                list-style-type: none;
                padding: 3px 0;
                margin: 0;
                font-weight: 600;
            }

                .contact li:before {
                    display: none;
                }

                .contact li + li {
                    border-top: 1px solid #e1e1e1;
                }


            .contact big {
                padding: 12px 4px;
                font-weight: 500;
                font-size: 17px;
                margin-top: 8px;
                display: block;
            }

            .contact big {
                margin-top: 0;
                color: #111;
                display: block;
            }
    </style>
}

