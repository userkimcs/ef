@model HePa.Web.Areas.Admin.ViewModels.HepaPassportAdminViewModel.HepaPassportEditViewModel
@using HePa.Core.Extensions;
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SimplePageLayout.cshtml";
}

<h2>Sửa thẻ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
            @Html.AlertBox(AlertBoxType.SUCCESS, ViewData["Success"] as String)
        @Html.AlertBox(AlertBoxType.DANGER, ViewData["Error"] as String)
    <div class="form-horizontal">
        <h4>HepaPassportEditViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.PassportCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PassportCode)
                @Html.ValidationMessageFor(model => model.PassportCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ActiveCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ActiveCode)
                @Html.ValidationMessageFor(model => model.ActiveCode)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Expirydate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expirydate)
                @Html.ValidationMessageFor(model => model.Expirydate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
